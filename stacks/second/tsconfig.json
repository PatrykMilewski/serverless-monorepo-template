{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "noImplicitAny": false,
    "lib": [
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
